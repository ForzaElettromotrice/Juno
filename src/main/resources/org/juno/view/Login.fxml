<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="backgroundLogin" fx:id="anchor" onKeyPressed="#anchorKeyPressed" prefHeight="1080.0" prefWidth="1920.0"
            stylesheets="@Style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.juno.controller.LoginController">
    <VBox layoutX="460.0" layoutY="140.0" prefHeight="800.0" prefWidth="1000.0" spacing="20.0">
        <Label prefHeight="150.0" prefWidth="1000.0"
               text="It looks like this is the first time you play the game, or that your game files are corrupted.&#10;Please choose a username and an avatar to start  (you can change them later).&#10;"
               textAlignment="CENTER">
            <font>
                <Font name="Javanese Text" size="25.0"/>
            </font>
        </Label>
        <Label prefHeight="50.0" prefWidth="1000.0" text="Type a username">
            <font>
                <Font name="Javanese Text" size="20.0"/>
            </font>
        </Label>
        <TextField fx:id="usernameTextField" prefHeight="40.0" prefWidth="500.0" promptText="Username"/>
        <Label text="Choose an avatar">
            <font>
                <Font name="Javanese Text" size="20.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="150.0" prefWidth="1000.0" spacing="80.0">
            <RadioButton fx:id="avatarRadioButton1" focusTraversable="false" mnemonicParsing="false" prefHeight="150.0"
                         prefWidth="150.0" selected="true">
                <graphic>
                    <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../images/icon1.png"/>
                    </ImageView>
                </graphic>
                <toggleGroup>
                    <ToggleGroup fx:id="avatar"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="avatarRadioButton2" mnemonicParsing="false" prefHeight="150.0" prefWidth="150.0"
                         toggleGroup="$avatar">
                <graphic>
                    <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../images/icon2.png"/>
                    </ImageView>
                </graphic>
            </RadioButton>
            <RadioButton fx:id="avatarRadioButton3" mnemonicParsing="false" prefHeight="150.0" prefWidth="150.0"
                         toggleGroup="$avatar">
                <graphic>
                    <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../images/icon3.png"/>
                    </ImageView>
                </graphic>
            </RadioButton>
        </HBox>
        <Label fx:id="alertLabel" alignment="CENTER" prefHeight="100.0" prefWidth="1000.0"
               text="You have to choose a username!" textFill="RED" visible="false">
            <font>
                <Font name="Javanese Text" size="30.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="1000.0">
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveClicked" prefHeight="100.0"
                    prefWidth="200.0" style="-fx-background-color: transparent;" text="Save">
                <font>
                    <Font name="Javanese Text" size="30.0"/>
                </font>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
